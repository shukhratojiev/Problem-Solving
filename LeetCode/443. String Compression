class Solution {
    public int compress(char[] chars) {
        
        int len = chars.length;

        int index=0;
        int count=1;

        for(int i=0; i<len-1; i++){
            if(chars[i] == chars[i+1]){
                count++;
            }else{
                chars[index] = chars[i];
                index++;
                if(count!=1){
                    String s = String.valueOf(count);
                    for(int j=0; j<s.length(); j++){
                        chars[index] = s.charAt(j);
                        index++;   
                    }
                }
                count=1;
            }
        }
        chars[index] = chars[len-1];
        index++;
        if(count!=1){
            String s = String.valueOf(count);
            for(int j=0; j<s.length(); j++){
                chars[index] = s.charAt(j);
                index++;   
            }
        }
        
        return index;
    }
}
